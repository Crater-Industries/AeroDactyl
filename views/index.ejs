                    <img src="<%= settings.homepage_logo || settings.logo %>" alt="<%= settings.name %> Logo" class="h-full w-auto object-contain">
                </div>
                <h1 class="text-2xl md:text-3xl font-bold text-white tracking-tight"><%= settings.name %></h1>
            </div>
        </div>
        
        <div class="max-w-5xl mx-auto flex flex-col md:flex-row gap-6 md:gap-8 justify-center items-center">
        
            <div class="w-full md:w-2/5 md:ml-8 lg:ml-12 bg-[#151f28]/80 backdrop-blur-sm border border-white/10 rounded-xl md:rounded-2xl p-5 md:p-6 flex flex-col shadow-xl shadow-black/20">
